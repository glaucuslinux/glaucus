prepare() {
  $MKDIR $XBLD/$nom &&
  cd $XBLD/$nom
} &&

configure() {
  $SRCD/$nom/$nom-$ver/configure \
    --host=$XTGT \
    --prefix=/usr \
    --disable-static \
    --with-libedit
} &&

build() {
  $MAKE
} &&

install() {
  $MAKE \
    DESTDIR=$XCER/$nom/sac \
    install-strip &&

  $LN $nom $XCER/$nom/sac/usr/bin/sh
}
