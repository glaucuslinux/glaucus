prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom &&

  $SCRD/patch 0 $nom glaucus 0001-path-for-make-4.3
}

configure() {
  printf "HAVE_WCHAR=1
OSNAME=glaucus
PREFIX=/usr
AR=$AR
CFLAGS='$($SCRD/classify species atlanticus "$CFLAGSFATNOCOMMON" "$CFLAGSFAT")'\n" > configure.local &&

  ./configure &&
  
  sed -e 's/BINDIR\t\t= \/usr\/local\/bin/BINDIR\t\t= \/usr\/bin/' \
    -e '/SBINDIR/d' \
    -e '/BIN_FROM_SBIN/d' \
    -e 's/MANDIR\t\t= .*/MANDIR\t\t= \/usr\/share\/man/' \
    -i Makefile.local &&

  sed -e 's/SBINDIR/BINDIR/' \
    -e 's/${BIN_FROM_SBIN}\///' \
    -i Makefile
}

build() {
  make
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install
}
