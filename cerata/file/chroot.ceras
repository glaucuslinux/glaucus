prepare() {
  $MKDIR $CBLD/$nom &&
  cd $CBLD/$nom
}

configure() {
  $SRCD/$nom/$nom-$ver/configure \
    --host=$TUPL \
    --prefix=$TOOL \
    --disable-libseccomp \
    --enable-fsect-man5
}

build() {
  $MAKE
}

install() {
  $MAKE \
    install-strip
}
