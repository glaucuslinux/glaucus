prepare() {
  $RSYNC $SRCD/$nom/XML-Parser-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom
}

configure() {
  perl Makefile.PL
}

build() {
  make
}

install() {
  make \
    DESTDIR=$SCER/$nom/sac \
    install
}
