prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom
}

configure() {
  $SCRD/patch 0 $nom glaucus 0001-use-gnu-hash-style &&

  ./configure \
    --prefix=/usr \
    --libexecdir=/usr/lib/$nom \
    --skeldir=/etc/$nom/skel \
    --with-sysdeps=/usr/lib/skalibs/sysdeps \
    --with-include=/usr/include \
    --with-dynlib=/usr/lib \
    --enable-shared \
    --disable-static \
    --disable-allstatic \
    --disable-all-pic \
    --enable-utmps &&

  sed "s/CFLAGS := .*/CFLAGS := $CFLAGSFAT -fno-stack-protector/" \
    -i config.mak
}

build() {
  $MAKE \
    strip
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install &&

  rm -frv $SCER/$nom/sac/etc
}
