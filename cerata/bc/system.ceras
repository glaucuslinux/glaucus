prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom
}

configure() {
  PREFIX=/usr \
  DESTDIR=$SCER/$nom/sac \
  ./configure.sh \
    -G \
    -M \
    -N
}

build() {
  make
}

install() {
  make \
    install
}
