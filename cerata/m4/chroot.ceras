prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $CSRC/$nom --delete &&
  cd $CSRC/$nom &&

  $SCRD/gnu guess build-aux &&
  $SCRD/gnu sub build-aux &&

  $MKDIR $CBLD/$nom &&
  cd $CBLD/$nom
}

configure() {
  $CSRC/$nom/configure \
    --host=$TUPL \
    --prefix=$TOOL \
    --enable-threads=posix \
    --disable-rpath \
    --with-packager=glaucus \
    --with-packager-bug-reports=https://github.com/glaucuslinux/glaucus/issues
}

build() {
  $MAKE
}

install() {
  $MAKE \
    install-strip &&

  $LN $nom $TOOL/bin/g$nom
}
