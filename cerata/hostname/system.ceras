prepare() {
  $RSYNC $SRCD/$nom/$nom/ $SSRC/$nom --delete &&
  cd $SSRC/$nom
}

configure() {
  $SCRD/patch 0 $nom glaucus remove-O2
}

build() {
  make
}

install() {
  make \
    BINDIR=/usr/bin \
    BASEDIR=$SCER/$nom/sac \
    install
}
