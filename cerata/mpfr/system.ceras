prepare() {
  $RSYNC $SRCD/$nom/$nom-$ver/ $SSRC/$nom --delete &&
  cd $SSRC/$nom &&

  $SCRD/gnu guess . &&
  $SCRD/gnu sub . &&

  $MKDIR $SBLD/$nom &&
  cd $SBLD/$nom
}

configure() {
  CFLAGS="$($SCRD/classify species atlanticus "$CFLAGSFINITE" "$CFLAGS")" \
  $SSRC/$nom/configure \
    --prefix=/usr \
    --enable-thread-safe \
    --enable-shared-cache \
    --disable-static \
    --enable-decimal-float \
    --enable-float128 \
    --enable-lto
}

build() {
  $MAKE
}

install() {
  $MAKE \
    DESTDIR=$SCER/$nom/sac \
    install-strip
}
